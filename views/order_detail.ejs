<%- include('includes/head.ejs') %>
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <h1>Hi from index</h1>
        <div class="product-list">
            <% for (let order_item of order_items) { %>
            <h2><%= order_item.product_title %></h2>
            <div>
                <img src="../imgs/<%= order_item.image_path %>" width="250px" height="250px"
                    alt="<%= order_item.product_title%>">
            </div>
            <div class="cart-item">

                $<%= order_item.price %>
                Quantity: <%= order_item.quantity %>
                Status: <%= order_item.status %>
            </div>
            <% } %>
            <h4>Total: $<%=total %></h4>
        </div>
    </main>

    <%- include('includes/end.ejs') %>