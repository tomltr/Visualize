<%- include('includes/head.ejs') %>
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <h1>Hi from index</h1>
        <div class="product-list">

            <% if (cart_exist ) { %>



            <% for (let cart_item of cart_items ) { %>

            <h2><%= cart_item.cart_item_name %></h2>
            <div>
                <img src="../imgs/<%= cart_item.cart_item_image %>" width="250px" height="250px"
                    alt="<%= cart_item.cart_item_name %>">
            </div>

            <div class="cart-item">
                <%= cart_item.price %>

                <form method="POST">


                    <input type="hidden" name="cart_item_title" id="cart_item_title"
                        value="<%= cart_item.cart_item_name %>">
                    <input type="hidden" name="cart_item_image_path" id="cart_item_image_path"
                        value="<%= cart_item.cart_item_image %>">
                    <input type="hidden" name="cart_item_price" id="cart_item_price" value="<%= cart_item.price %>">
                    <input type="number" name="cart_item_quantity" id="cart_item_quantity"
                        value="<%= cart_item.quantity %>">
                    <button type="submit">Update</button>
                </form>

            </div>
            <% } %>
            <form method="GET" action="/order_form">
                <input type="hidden" name="user" id="user" value="<%= current_user %>">
                <button type="submit">Checkout</button>
            </form>

            <% } else  { %>
            <h3>Empty Cart</h3>
            <% } %>

            <h4>Total: $<%= total %></h4>

        </div>
    </main>

    <%- include('includes/end.ejs') %>