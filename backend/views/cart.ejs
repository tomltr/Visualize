<%- include('includes/head.ejs') %>
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <h1>Hi from index</h1>
        <div class="product-list">

            <% if (cart_exist ) { %>



            <% for (let cart_item of cart_items ) { %>

            <h2><%= cart_item.product_title %></h2>
            <div>
                <img src="../imgs/<%= cart_item.image_path %>" width="250px" height="250px"
                    alt="<%= cart_item.product_title %>">
            </div>

            <div class="cart-item">
                <%= cart_item.price %>

                <form method="POST">


                    <input type="hidden" name="current_user" id="current_user" value="<%= current_user %>">
                    <input type="hidden" name="product_id" id="product_id" value="<%= cart_item.product_id %>">
                    <input type="number" name="cart_item_quantity" id="cart_item_quantity"
                        value="<%= cart_item.quantity %>">
                    <button type="submit">Update</button>
                </form>

            </div>
            <% } %>
            <form method="GET" action="/order_form">
                <input type="hidden" name="user" id="user" value="<%= current_user %>">
                <button type="submit">Checkout</button>
            </form>

            <% } else  { %>
            <h3>Empty Cart</h3>
            <% } %>

            <h4>Total: $<%= total %></h4>

        </div>
    </main>

    <%- include('includes/end.ejs') %>